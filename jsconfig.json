{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@app": ["./src/app/index.js"],
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@views/*": ["./src/views/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node", "webpack", "webpack-dev-server"]
}
